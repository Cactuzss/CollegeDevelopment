<Window x:Class="practice.Windows.Fourth.RoundShape"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practice.Windows.Fourth"
        mc:Ignorable="d"
        Title="RoundShape" Height="500" Width="500"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    <Grid>
        <Border Name="newBorder" CornerRadius="100,1000,1000,1000" Opacity="0.7" Background="LightBlue" MouseLeftButtonDown="newBorder_MouseLeftButtonDown"/>
        <Button Width="100" Height="25" Background="Transparent" Content="Close" Click="Button_Click"/>
    </Grid>

</Window>